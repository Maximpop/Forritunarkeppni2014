using System.IO;
using System;

class Program
{
    static void Main() //Pýramída verkefni
    {
        int fjoldi = Convert.ToInt32(Console.ReadLine());
        int pyramidi = 0, tala = 0;
        for(int i = 0; fjoldi > pyramidi; i++)
        {
            pyramidi = pyramidi + i;
            tala = i;
        }
        if (pyramidi > fjoldi)
        {
            pyramidi = pyramidi - tala;
            tala--;
            Console.WriteLine(tala + " " + (fjoldi - pyramidi));
        }
        else
        {
        Console.WriteLine(tala + " " + (fjoldi - pyramidi));
        }
    }
}
